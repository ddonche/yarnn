<%= form_for [@post, @comment] do |f| %>
  <% if @comment.errors.any? %>
      <div class="error_messages">
        <h3>Please correct the following errors.</h3>
        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.text_area :content, class: "form-control", rows: 2, placeholder: "what do you think about this?" %>
    </div>
    
    <div class="form-group">
      <%= f.submit "Comment", class: "btn btn-sm btn-primary pull-right" %>
    </div>
  
<% end %>

  