<div class="user-left-column">
  <%= render 'posts/left' %>
</div>

<div class="user-right-column">
  
  <div id="content" class="col-md-8">
  <% if user_signed_in?  %>
    <div class="main-content">
      <div class="quick-post-box">
        <div class="row">
          <div class="col-md-2">
            <%= link_to user_path(current_user) do
    		     	image_tag(current_user.avatar.url, width: 45, class: "img-circle pull-left") 
    		  	end %>
          </div>
          <div class="col-md-10">
            <%= render "posts/quick_form" %>
          </div>
        </div>
      </div>
    </div>
	<% end %> 

<% @feed_items.each do |item| %>
  <div class="main-content">
  <div class="link row clearfix">
    <div class="post-box">
		<div class="row">
	    <div class="col-md-2">
	    	<%= link_to user_path(item.user) do
		     	image_tag(item.user.avatar.url, width: 45, class: "img-circle pull-left")
		  	end %>
			</div>
			
			<div class="col-md-10-offset-2">
			  <% if item.user == current_user %>
        	<div class="btn-group pull-right">
        	<%= link_to edit_post_path(item), class: "btn btn-default btn-xs", style: "color: #039087;" do %>
        		<span class="glyphicon glyphicon-cog"></span>
        	<% end %>
        	<%= link_to item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs", style: "color: #039087;" do %>
        		<span class="glyphicon glyphicon-trash"></span>
        	<% end %>
        	</div>
        <% end %>
		  	<h5 style="margin-top: 0px"><%= link_to item.title, item %><br> 
		  	<small class="author"><%= link_to item.user.username, user_path(item.user) %> <span class="glyphicon glyphicon-star"></span> <%= item.user.reputation %>
         - <%= time_ago_in_words(item.created_at) %> ago in
		  	<% item.tag_list.map.each do |tag| %>
          <div class="tags">
            <i><%= link_to tag, tag_path(tag) %></i>
          </div>
        <% end %></small></h5>
        <br/>
        <div class="post-text">
  			  <%= if item.image? 
            image_tag item.image, width: 440, class: "image"
          end %>
          <br />
          <%= item.content %>
        </div>
			
            <div class="post-buttons">
              <div class="btn-group">
            		<% if item.url? %>
            			<%= link_to item.url, class: "btn btn-primary btn-xs" do %>
            				<span class="glyphicon glyphicon-link" style="color: #ededed;"></span>
            			<% end %>
            		<% else %>
            			<%= link_to "#", class: "btn btn-default btn-xs", style: "color: #ccc;" do %>
            				<span class="glyphicon glyphicon-link"></span>
            			<% end %>
            		<% end %>
            		<% if item.url? %>
            			<%= link_to item.url, class: "btn btn-primary btn-xs" do %>
            				<span class="glyphicon glyphicon-globe" style="color: #ededed;"></span>
            				<%= 1821 %>
            			<% end %>
            		<% else %>
            			<%= link_to "#", class: "btn btn-default btn-xs", style: "color: #ccc;" do %>
            				<span class="glyphicon glyphicon-globe"></span>
            			<% end %>
            		<% end %>
          		</div>
          		<div class="btn-group">
          			<%= link_to item, class: "btn btn-primary btn-xs" do %>
          				<span class="glyphicon glyphicon-comment" style="color: #ededed;"></span>
          				<span style="color: #ededed;"><%= item.comments.count %></span>
          			<% end %>
          			<%= link_to item, class: "btn btn-primary btn-xs" do %>
          				<span class="glyphicon glyphicon-flash" style="color: #ededed;"></span>
          				<%= 3 %>
          			<% end %>
          	  </div>
          	
              <div class="btn-group pull-right">
                <%= link_to like_post_path(item), method: :put, class: "btn btn-default btn-xs" do %>
                  <span class="glyphicon glyphicon-chevron-up"></span>
                  <%= item.get_upvotes.size %>
                <% end %>
                <%= link_to dislike_post_path(item), method: :put, class: "btn btn-default btn-xs" do %>
                  <span class="glyphicon glyphicon-chevron-down"></span>
                  <%= item.get_downvotes.size %>
                <% end %>
                <%= link_to item, class: "btn btn-default btn-xs" do %>
          				<span class="glyphicon glyphicon-retweet"></span>
          				<%= 17 %>
            		<% end %>
            	</div>
            </div>
    	    </div>
    		</div>
    </div>
  </div>
</div>
      
<% end %>
</div>