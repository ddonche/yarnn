<div class="main-content">

    <div class="row">
      <div class="col-sm-2">
        &nbsp;
      </div>
      <div class="col-sm-10-offset-2">
        <% if user_signed_in? %>
          <%= render "comments/form" %><br/>
        <% else %>
          <div class="small"><em>You must be logged in to comment.</em></div>
        <% end %>
      </div>
    </div>
    
    <%= render "comments/comments" %>

  <% if @post.comments.count != 0 %>
  
    <%= link_to new_post_comment_path(@post), :remote => true do %>
      <a href="#comment">New Comment</a>
    <% end %>
  
  <% end %>
</div>