<% @posts.each do |post| %>
  <div class="link row clearfix">
      <h4>
        <%= link_to post.title, post %><br>
        <small class="author"><%= time_ago_in_words(post.created_at) %> by <%= post.user.username %></small>
      </h4>
      
      <p><%= post.content %></p>

      <% if post.url? %>
      	<div class="btn-group">
      			<%= link_to post.url, class: "btn btn-primary btn-sm" do %>
      				<span class="glyphicon glyphicon-globe" style="color: #ededed;"></span>
      			<% end %>
      	</div>
      <% end %>
      
      <% if post.user == current_user %>
      	<div class="btn-group">
      	<%= link_to edit_post_path(post), class: "btn btn-default btn-sm", style: "color: #039087;" do %>
      		<span class="glyphicon glyphicon-cog"></span>
      	<% end %>
      	<%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm", style: "color: #039087;" do %>
      		<span class="glyphicon glyphicon-trash"></span>
      	<% end %>
      <% end %>
  </div>
<% end %>
