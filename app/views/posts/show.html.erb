<div class="page-header">
  <h1><a href="<%= @post.url %>"><%= @post.title %></a><br> <small><%= time_ago_in_words(@post.created_at) %> by <%= @post.user.username %></small></h1>
</div>

<div class="content">
	<%= @post.content %>
</div>

<% if @post.url? %>
	<div class="btn-group">
			<%= link_to 'Visit URL', @post.url, class: "btn btn-primary" %>
	</div>
<% end %>

<% if @post.user == current_user %>
	<div class="btn-group">
		<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
		<%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
	</div>
<% end %>