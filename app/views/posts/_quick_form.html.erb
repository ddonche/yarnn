      <%= image_tag("icons/film.png", width: 24, alt: "film", style: "margin-right: 9px; text-decoration: none;") %>
      <%= image_tag("icons/categories.png", width: 24, alt: "categories", style: "margin-right: 9px; text-decoration: none;") %>
      <%= image_tag("icons/link.png", width: 24, alt: "link", style: "margin-right: 9px; text-decoration: none;") %>
    <% end %>
    <%= image_submit_tag("icons/submit.png", width: 24, class: "pull-right") %>
  </div>
<% end %>

